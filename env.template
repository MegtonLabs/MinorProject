PIN_MEMORY=auto

# Checkpoint Configuration
CHECKPOINT_DIR=checkpoints

# Model Configuration
MODEL_VARIANT=resnet50_fpn
TRAINABLE_BACKBONE_LAYERS=-1
USE_CUSTOM_ANCHORS=true
USE_TORCH_COMPILE=false

# Training Behavior
VAL_INTERVAL=5
GRAD_CLIP=0

