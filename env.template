# Dataset Configuration
DATA_ROOT=ssbi_dataset

# Training Configuration
BATCH_SIZE=2
NUM_EPOCHS=50
LEARNING_RATE=0.001
MOMENTUM=0.9
WEIGHT_DECAY=0.0005

# GPU Configuration
CUDA_DEVICE=0
USE_AMP=auto

# DataLoader Configuration
